{
  "compilerOptions": {
    "noImplicitAny": false, // 不需要显视申明变量any
    "target": "es5", // 编译后的目标javascript版本
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // 允许混合编译javascript
    "skipLibCheck": true,
    "esModuleInterop": true, // 允许使用commonjs的形式import默认文件
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // 配置的是我们代码的模块系统
    "moduleResolution": "node", // 决定了我们编译器的工作模式 node or classic
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // 表示发生错误的时候，编译器不要生成JS代码
    "jsx": "react-jsx" // 允许编译器支持编译react代码
  },
  "include": [
    "src"
  ]
}
